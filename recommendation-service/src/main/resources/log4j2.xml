<?xml version="1.0" encoding="UTF-8" ?>
<Configuration >
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            //
            <PatternLayout>
                <pattern>%d{HH:mm:ss.SSS} %-30.30[%t] %-5level %logger{36} \(%X{callerInformation}\) - %msg%n%throwable</pattern>
            </PatternLayout>
        </Console>

        <RollingFile name="File" fileName="logs/recommendation-service/recommendation-service-log4j2.log"
                     filePattern="./logs/recommendation-service/recommendation-service-%d{yyyy-MM-dd}.%i-log4j2.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} \(%X{callerInformation}\): %msg%n%throwable</pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Root>
        <Logger name="com.gokdenizozkan.ddd.recommendationservice" level="DEBUG" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Logger>
    </Loggers>
</Configuration>